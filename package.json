{
  "name": "donate-checker",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "postinstall": "PUPPETEER_SKIP_DOWNLOAD=false node node_modules/puppeteer/install.mjs",
    "gcp-build": "PUPPETEER_SKIP_DOWNLOAD=false node node_modules/puppeteer/install.mjs",
    "start": "functions-framework --target=app --port=${PORT:-8080}",
    "deploy": "gcloud functions deploy donate-checker --gen2 --region=europe-central2 --docker-image=${IMAGE_URI:?set IMAGE_URI} --entry-point=app --trigger-http --allow-unauthenticated --memory=1024Mi --timeout=120s"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.0",
    "puppeteer": "^24.2.2"
  }
}